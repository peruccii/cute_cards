// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum InviteType {
  LOVE
  BESTFRIENDS
  BIRTHDAY
}

enum InvitePlan {
  BASIC
  PREMIUM
}

enum MethodPayment {
  PIX
  STRIPE
}

enum PaymentStatus {
  pending
  accredited
}

model Invite {
  id             String        @id
  date           DateTime
  url_music      String?
  email          String
  title          String
  payment_method MethodPayment
  sub_title      String
  expirationDate DateTime
  message        String        @db.Text
  image_urls     Json
  names          String
  card_color     String
  bg_color       String
  invite_type    InviteType
  invite_plan    InvitePlan
  createdAt      DateTime

  @@index([email])
}

model Payment {
  id             String        @id
  status_payment PaymentStatus
  createdAt      DateTime
  it             String
  ip             String
  ns             String
  email_user     String
}
