generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum InviteType {
  LOVE
  BESTFRIENDS
  BIRTHDAY
}

enum InvitePlan {
  BASIC
  PREMIUM
}

model Invite {
  id             String     @id
  date           DateTime
  url_music      String?
  email          String
  title          String
  sub_title      String
  expirationDate DateTime
  message        String
  imageUrls      Json
  invite_type    InviteType
  invite_plan    InvitePlan
  createdAt      DateTime

  @@index([email])
}
